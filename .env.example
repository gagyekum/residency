# Django
SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=config.settings.dev

# Database (Development - individual variables)
DB_NAME=tenancy
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Database (Production - use DATABASE_URL instead)
# DATABASE_URL=postgres://user:password@host:5432/dbname

# Allowed Hosts (comma-separated, for ngrok or production domains)
# ALLOWED_HOSTS=example.ngrok-free.app,yourdomain.com

# CORS (comma-separated origins, for production)
# CORS_ALLOWED_ORIGINS=https://yourdomain.com

# Vite dev server (optional, defaults to http://localhost:5173)
# VITE_DEV_SERVER=http://localhost:5173

# Email Configuration (optional - defaults to console backend for dev)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=noreply@example.com
# RESIDENCE_FROM_EMAIL=residency@example.com

# SMS Configuration (MNotify)
# MNOTIFY_API_KEY=your-mnotify-api-key
# MNOTIFY_SENDER_ID=YourSenderID
